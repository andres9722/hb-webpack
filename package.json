{
  "name": "hb-week4-js-dom",
  "version": "1.0.0",
  "description": "Gallery, Movies",
  "main": "index.js",
  "private": true,
  "scripts": {
    "serve": "http-server -c-1 --silent",
    "build": "npm-run-all clean lint:** --parallel  copy:**",
    
    "lint": "npm-run-all lint:**",
    "lint:css": "stylelint 'src/**/*.scss' --syntax scss",
    "lint:js": "standard 'src/**/*.js'",
    "watch:html": "onchange 'src/**/*.html' -- npm run copy:html",
    
    "watch:js": "onchange 'src/**/*.js' -- npm-run-all lint:js copy:js",
    "copy:html": "copyfiles -u 1 src/**/*.html public",
    
    "precommit": "npm run lint",
    "clean": "rm -rf public/",
    "start:build": "npm-run-all build serve",
    "start": "npm-run-all copy:** --parallel watch:** serve",
    "bundle": "webpack"
  },
  "author": "Andr√©s Felipe",
  "license": "MIT",
  "devDependencies": {
    "copy": "^0.3.1",
    "copyfiles": "^1.2.0",
    "css-loader": "^0.28.9",
    "extract-text-webpack-plugin": "^3.0.2",
    "http-server": "^0.10.0",
    "husky": "^0.14.3",
    "node-sass": "^4.7.2",
    "npm-run-all": "^4.1.2",
    "onchange": "^3.3.0",
    "optimize-css-assets-webpack-plugin": "^3.2.0",
    "postcss-loader": "^2.0.10",
    "resolve-url-loader": "^2.2.1",
    "sass-loader": "^6.0.6",
    "standard": "^10.0.3",
    "style-loader": "^0.19.1",
    "stylelint": "^8.3.1",
    "stylelint-config-recommended-scss": "^3.0.0",
    "stylelint-scss": "^2.2.0",
    "webpack": "^3.10.0"
  },
  "dependencies": {
    "reset-css": "^2.2.1"
  }
}
